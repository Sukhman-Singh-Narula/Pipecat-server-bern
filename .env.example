# ESP32 WebRTC AI Assistant - Environment Configuration
# Copy this file to .env and fill in your API keys

# Required API Keys for AI Services
OPENAI_API_KEY=your_openai_api_key_here
DEEPGRAM_API_KEY=your_deepgram_api_key_here
CARTESIA_API_KEY=your_cartesia_api_key_here

# Optional: Additional TTS Services
ELEVENLABS_API_KEY=your_elevenlabs_api_key_here

# Optional: Additional STT Services
ASSEMBLYAI_API_KEY=your_assemblyai_api_key_here

# Optional: Additional LLM Services
ANTHROPIC_API_KEY=your_anthropic_api_key_here

# Server Configuration
SERVER_HOST=0.0.0.0
SERVER_PORT=8000
LOG_LEVEL=info

# WebRTC Configuration
# Add TURN server credentials if needed for NAT traversal
# TURN_SERVER_URL=turn:your-turn-server.com:3478
# TURN_USERNAME=your_turn_username
# TURN_PASSWORD=your_turn_password

# Optional: Database Configuration for persistent storage
# DATABASE_URL=sqlite:///./esp32_devices.db
# DATABASE_URL=postgresql://user:password@localhost/esp32_ai

# Optional: Monitoring and Metrics
# ENABLE_METRICS=true
# PROMETHEUS_PORT=9090

# Optional: Security Settings
# API_KEY=your_api_key_for_device_authentication
# JWT_SECRET=your_jwt_secret_for_session_management
